<!DOCTYPE html>
<html lang='en'>

{{> head title="Orders" script="orders.js"}}

<body>
  {{> header}}

  <main class='main'>
    <div class='container'>
      <div class="content orders-content">
        {{#each orders}}
        {{this.items}}
        {{/each}}
        <form id="order-form" action="" class="form order-form">

          <label for="waiter">Waiter</label>
          <select id="waiter" name="waiter" class="select" required>
            <option value="" selected>Select waiter id</option>
            {{#each waiters}}
            <option value="{{ this.id }}">{{ this.name }}</option>
            {{/each}}
          </select>

          <p>Menu item</p>
          <div class="menu-items">
            {{#each menuItems}}
            <div>
              <input type="checkbox" id='menu-item-{{ this.id }}' title="{{ this.description }}" value="{{ this.id }}">
              <label for='menu-item-{{ this.id }}'>{{ this.title }}</label>
              </input>
            </div>
            {{/each}}
          </div>
          <div class="btn-container">
            <input type="reset" value="Reset" class="btn">
            <button type="submit" class="btn">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </main>
</body>

</html>